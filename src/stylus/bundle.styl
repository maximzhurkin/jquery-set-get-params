// Vendors
@import './vendor/meyer.styl'
// Core
@import './core/config.styl'
@import './core/mixins.styl'
@import './core/reset.styl'
@import './core/animations.styl'
// Main
@import './sections/general.styl'

.header
	color color_white
	background-color color_blue
	&__container,
	&__content
		padding-left (gap_laptop / 2)
		padding-right (gap_laptop / 2)
	&__container
		margin-left auto
		margin-right auto
		width display_laptop
	&__heading,
	&__description
		margin-bottom gap_laptop
	&__heading
		font-size (52 / 16em)
		font-weight bold
		line-height 1em
	&__description
		font-size (24 / 16em)
	&__button
		margin-right (gap_laptop / 2)
		&:last-child
			margin-right 0

.butts
	&__lside,
	&__main
		padding-left (gap_laptop / 2)
		padding-right (gap_laptop / 2)
	&__lside,
	&__main
		float left
	&__lside
		column(3)
	&__main
		column(9)
	&__search,
	&__sorting
		margin-bottom gap_laptop
	&__sorting-item
		margin-right gap_laptop
		float left
		&:last-child
			margin-right 0
		&--right
			float right
	&__sorting-caption,
	&__sorting-select
		float left
		height 48px
	&__sorting-caption
		margin-right (gap_laptop / 2)
		line-height 48px
	&__products
		height 72px


.categories
	&__list
		border 2px solid color_gray
		border-radius 8px
		overflow hidden
	&__item
		border-bottom 2px solid color_gray
		&:last-child
			border-bottom none
	&__link
		padding-top (gap_laptop / 2)
		padding-left (gap_laptop / 2)
		padding-right (gap_laptop / 2)
		padding-bottom (gap_laptop / 2)
		display block
		color color_blue
		text-decoration none
		transition color .25s ease-in-out, background-color .25s ease-in-out
		.no-touch &:hover
			background-color rgba(color_blue, .05)
		&--active,
		.no-touch &--active:hover
			color color_white
			background-color color_blue

.input
	padding-left (gap_laptop / 2)
	padding-right (gap_laptop / 2)
	display block
	width 100%
	height (20 + gap_laptop)
	font-family font_main
	font-size (16 / 16em)
	border 2px solid color_gray
	border-radius 5px
	transition box-shadow .25s ease-in-out, border-color .25s ease-in-out
	&--search
		padding-left ((gap_laptop / 2) + 32px)
		border-radius ((20 + gap_laptop) / 2)
		background-image url(path_images+'icon-search.svg')
		background-size 18px
		background-repeat no-repeat
		background-position top 15px left (gap_laptop / 2)
	.no-touch &:hover,
	&:focus
		border-color rgba(color_blue, .5)
	&:focus
		box-shadow 0 0 16px rgba(color_blue, .5)

.select
	width 200px
	height 48px
	border 2px solid color_gray
	border-radius 6px
	overflow hidden
	background-color color_white
	background-image url(path_images+'icon-arrow-down.svg')
	background-repeat no-repeat
	background-size 8px
	background-position top 18px right (gap_laptop / 2)
	transition border-color .25s ease-in-out
	.no-touch &:hover
		border-color rgba(color_blue, .5)
	select
		padding-left (gap_laptop / 2)
		padding-right 10%
		width 110%
		height 44px
		font-family font_main
		font-size (16 / 16em)
		background-color transparent
		border none

.pagination
	&__item
		margin-right (gap_laptop / 2)
		display inline-block
	&__link
		display inline-block
		color color_blue
		text-decoration none
		line-height 1.375em
		border-bottom 2px solid rgba(color_blue, .25)
		transition border-color .25s ease-in-out
		&--active
			font-weight bold
			border-bottom-width 6px
		.no-touch &:hover,
		&--active
			border-color rgba(color_blue, 1)

.button
	padding-left (gap_laptop / 2)
	padding-right (gap_laptop / 2)
	display inline-block
	height 48px
	line-height 46px
	text-decoration none
	color color_black
	border 2px solid color_gray
	border-radius 10px
	transition color .25s ease-in-out, background-color .25s ease-in-out
	&--yellow
		color color_yellow
		border-color color_yellow
		.no-touch &:hover
			color color_blue
			background-color color_yellow
	&--white
		color color_white
		border-color color_white
		.no-touch &:hover
			color color_blue
			background-color color_white

skew = 3deg
section_gap = 92px
.section
	padding-top section_gap
	padding-bottom section_gap
	&--gray
		background-color color_smoke
	&--blue
		background-color color_blue
	&--skew
		margin-left -5%
		width 110%
		transform skew(skew, -(skew))
	&--top
		margin-top -5%
		padding-top (section_gap * 2)
	&--skew &__container
		transform skew(-(skew), skew)
	&__container,
	&__column,
	&__content
		padding-left (gap_laptop / 2)
		padding-right (gap_laptop / 2)
	&__column
		column(12)
		float left
		&--six
			column(6)
	&__container
		margin-left auto
		margin-right auto
		width display_laptop
	&__code
		margin-bottom gap_laptop
	&__heading
		margin-bottom 52px
		font-size (38 / 16em)
		font-weight bold
		line-height 1.125em
		&--three
			margin-bottom 24px
			font-size (24 / 16em)

.code
	font-family monospace
